%table.data
  %thead
    %tr.head
      %th Name
      %th.align= "#{@report.expenditure_title} (#{@report.unit})"
      %th.align= "#{@report.budget_title} (#{@report.unit})"

  %tbody
    - @report.collection.each do |e|
      %tr
        %td= resource_link(e)
        %td.align= @report.format(e.total_spend)
        %td.align= @report.format(e.total_budget)
    - if @report.show_totals
      %tr.summary
        %td
          Total
        %td.align
          %span.currency= @report.currency
          = n2c(@report.total_spend, "", ",")
        %td.align
          %span.currency= @report.currency
          = n2c(@report.total_budget, "", ",")
