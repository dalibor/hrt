- content_for :head do
  <script type="text/javascript" src="https://www.google.com/jsapi"></script>

:javascript
  google.load("visualization", "1", {packages: ["corechart"]});
  var _responses = #{js_safe(@pie)};

- title("Responses")

%h1.request_nav
  = render '/shared/request_nav'
  #search
    - form_tag admin_responses_path, :method => :get do
      = render 'shared/search_form'

#reports-summary
  %h2
    Response Status
  #response_pie

%ul.horizontal
  %li
    = link_to 'Response Status', '#', :id => "show_pie", :class => "create_alt"

.section_overlap
  %ul.section_nav
    - ["Reporting", "Not Yet Started", "Started", "Submitted", "Rejected", "Accepted", "Non-Reporting", "All"].each do |filter|
      - css_class = "selected" if params[:filter] == filter || (filter == 'Reporting' && params[:filter].blank?)
      %li{:class => css_class}
        = link_to filter, {:sort => params[:sort], :direction => params[:direction], :query => params[:query], :filter => filter}

.section_form.wrapped.last
  #filter_help
    %p= search_and_filter_responses(@organizations.total_entries, params[:query], params[:filter])

  - unless @organizations.empty?
    %table.standard.rounded
      %thead
        %tr
          %th= sortable "name", "Organization"
          %th Primary Contact
          %th Status
      %tbody
        = render :partial => 'organization', :collection => @organizations

    = will_paginate @organizations
