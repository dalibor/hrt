= f.inputs :class => 'inputs' do
  %li.last
    %ul.section_form.first
      = f.input :from, :label => 'From', :hint => 'From currency'
      = f.input :to, :label => 'To', :hint => 'To currency'
      = f.input :rate, :label => 'Rate', :hint => 'What is the conversion rate'
  %li.last
    %ul.horizontal.section_form.last.connect
      = f.actions :class => 'buttons' do
        = f.action :submit, :label => "Save", :button_html => {:class => "next"}
