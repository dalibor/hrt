- title "Change Your Password"

.sign_in_form.center

  %h2 Change Password

  = semantic_form_for @user, :url => password_reset_path(:id => params[:id]) do |f|
    = f.inputs do
      = f.input :password, :label => "New Password"
      = f.input :password_confirmation
    = f.actions do
      = f.action :submit, :label => "Change My Password", :button_html => {:class => "create_alt"}
