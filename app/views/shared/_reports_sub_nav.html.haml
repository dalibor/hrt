%ul
  %li{:class => (['reports', 'reports/projects'].include?(params[:controller]) ? 'active' : nil)}
    = link_to 'Overview', reports_path
  %li{:class => (params[:controller] == 'documents' ? 'active' : nil)}
    = link_to 'Files', documents_path
  - if current_user.sysadmin?
    %li{:class => (params[:controller] == 'admin/reports' ? 'active' : nil)}
      = link_to 'Dynamic', reports_path

