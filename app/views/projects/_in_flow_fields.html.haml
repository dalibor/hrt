- error_class = ""
- error_class = "error" unless f.object.errors.empty?

%tr.overflow_fix.fields{:class => error_class}
  %td.title= f.text_field :organization_id_from, :value => f.object.from.try(:name), :class => 'js_autocomplete'
  %td= f.text_field :spend, :class => 'js_spend no_style'
  %td= f.text_field :budget, :class => 'js_budget no_style'
  %td.delete= link_to_remove_fields "x", f, {:class => 'delete_row totals_callback'}
