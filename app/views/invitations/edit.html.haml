-title "New Profile Registration"

.sign_in_form.center.invite
  %h2.welcome
    Welcome to the
    %br Health Resource Tracker
  %h3 Please select a password

  = semantic_form_for @user, namespace: 'invitation', url: invitation_url(params[:id]), html: {id: 'invitation_form'} do |f|
    = f.inputs do
      %ul
        = f.input :password, :input_html => { :value => nil }
        = f.input :password_confirmation

    = f.actions do
      = f.action :submit, :label => "Save", :class => "last", :button_html => {:class => "create_alt"}
