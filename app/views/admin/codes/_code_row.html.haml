%li
  - unless code.leaf?
    %span.collapsed{id: code.id} +
    %div.clearfix{id: code.id}
      = link_to code.short_display, edit_admin_code_path(code), :class => "code-label"
  - else
    %span
    %div.clearfix
      = link_to code.short_display, edit_admin_code_path(code), :class => "code-label"

  - unless code.leaf?
    %ul{id: "#{ code.id }_act", style: "display: none"}
      - code.children.each do |child|
        = render 'code_row', code: child
