- content_for :head do
  <script type="text/javascript" src="https://www.google.com/jsapi"></script>

  :javascript
    google.load("visualization", "1", {packages:["corechart"]});
    var _expenditure_summary   = #{js_safe(@report.expenditure_pie)};
    var _budget_summary  = #{js_safe(@report.budget_pie)};

- title 'Reports'

- content_for :sub_nav do
  = render('shared/reports_sub_nav')

%h1.request_nav
  = render '/shared/request_nav', :name => @report.name, :disable => true


.crumb_heading
  %ul.breadcrumb
    %li
      = link_to "Overview", reports_path
      >
      - if @report.activity.project
        = link_to @report.activity.project.name, reports_project_path(@report.activity.project)
        >
  
  %h2= @report.activity.name

.reports_summary.section_base.section_form.bordered
  %p.summary_col
    %span Total Expenditure
    %span.currency= @report.currency
    = number_to_currency @report.total_spend, :unit => ""
  %p.summary_col
    %span Total Budget
    %span.currency= @report.currency
    = number_to_currency @report.total_budget, :unit => ""
  %p.summary_col.last
    %span Change
    %span.currency %
    = @report.percentage_change

%ul.group.connect#tabs-container
  %li= link_to "Implementers", "#", :class => "active"
  %li= link_to "Locations", "#"
  - unless @report.activity.is_a?(OtherCost)
    %li= link_to "Inputs", "#"

.section_base.section_form.first

  .full
    .first-half
      %h2= "Expenditure Summary"
      #code_spent.bordered

    .second-half
      %h2= "Budget Summary"
      #code_budget.bordered

  %br
  %table.data
    %thead
      %tr.head
        %th Name
        %th.align Expenditure
        %th.align Budget

    %tbody
      - @report.implementer_splits.each do |implementer_split|
        %tr
          %td= implementer_split.organization.name
          %td.align= number_to_currency implementer_split.spend, :unit => ""
          %td.align= number_to_currency implementer_split.budget, :unit => ""
      %tr.summary
        %td
          Total
        %td.align
          %span.currency= @report.currency
          = number_to_currency @report.total_spend, :unit => ""
        %td.align
          %span.currency= @report.currency
          = number_to_currency @report.total_budget, :unit => ""

